<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<EditText 
	    android:id="@+id/edVeriableString"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="Please Enter a Word"
	    />
	<EditText 
	    android:id="@+id/edVeriableInteger"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/edVeriableString"
	    android:hint="Please Enter a Number"
	    android:inputType="number"
	    />
	<Button 
	    android:id="@+id/btveriable"
	      android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/edVeriableInteger"
	    android:text="OK"
	    />
</RelativeLayout>
